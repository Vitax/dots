super + control + r
    pkill -USR1 -x sxhkd

super + p
    launchers rofi -theme ${XDG_CONFIG_HOME}/rofi/launcher

super + Return
    kitty

super + e
    thunar

super + shift + e
    emacsclient -c -a "emacs"

super + shift + Delete
    powermenu

XF86MonBrightnessDown
    bright -d 2

XF86MonBrightnessUp
    bright -i 2

XF86AudioMute
    vol -t

XF86AudioLowerVolume
    vol -d 2%

XF86AudioRaiseVolume
    vol -i 2%

XF86AudioMicMute
    mic -t

control + Print
    maim | tee ~/images/$(date +%s).png | xclip -selection clipboard -t image/png

shift + Print
    maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

super + End
    pkill -USR1 redshift

