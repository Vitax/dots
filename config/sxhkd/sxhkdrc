super + control + r
    pkill -USR1 -x sxhkd

super + p
   launchers rofi -theme ~/.config/rofi/themes/launcher.rasi

super + Return
    kitty

#super + control + Return
#    st_tabbed

super + e
    pcmanfm

super + shift + e
    emacsclient -c -a "emacs"

super + shift + Delete
    powermenu

XF86MonBrightnessDown
    bright -d 2 ; update_dwmblocks 26

XF86MonBrightnessUp
    bright -i 2 ; update_dwmblocks 26

XF86AudioMute
    vol -t ; update_dwmblocks 27

XF86AudioLowerVolume
    vol -d 2% ; update_dwmblocks 27

XF86AudioRaiseVolume
    vol -i 2% ; update_dwmblocks 27

XF86AudioMicMute
    mic -t

control + Print
    maim | tee ~/images/$(date +%s).png | xclip -selection clipboard -t image/png

shift + Print
    maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

