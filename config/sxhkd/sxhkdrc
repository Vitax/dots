alt + control + r
    pkill -USR1 -x sxhkd

alt  + p
    applauncher rofi -theme ${XDG_CONFIG_HOME}/rofi/themes/papercolor.rasi

alt + shift + Return
    stwrapper

alt + control + Return
    stwrapper t

super + e
    pcmanfm

alt + shift + e
    st -n nvim-ide -g 164x52 -e nvim

super + { shift + x,l}
    {sudo systemctl suspend, slock}

XF86MonBrightnessDown
    bright -d 2

XF86MonBrightnessUp
    bright -i 2

XF86AudioMute
    vol -t

XF86AudioLowerVolume
    vol -d 2%

XF86AudioRaiseVolume
    vol -i 2%

XF86AudioMicMute
    mic -t

control + Print
    maim | tee ~/images/$(date +%s).png | xclip -selection clipboard -t image/png

shift + Print
    maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

