[colors]
background-opaque = #00000000
background = #282A2E
background-alt = #373B41

foreground = #C5C8C6

primary = #F0C674
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/main]
width = 80%
height = 22pt

bottom = false

offset-x = 10%
offset-y = 4

radius = 0

; dpi = 96

background = ${colors.background-opaque}
foreground = ${colors.foreground}

line-size = 3pt

padding-left = 2
padding-right = 2

module-margin = 0

separator = 
separator-foreground = ${colors.disabled}

font-0 = JetBrains Mono;3

modules-left = battery alsa memory cpu
modules-center = xworkspaces
modules-right = wlan eth date

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

wm-restack = generic

; override-redirect = true

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-background = ${colors.background}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/alsa]
type = internal/alsa

format-volume = <label-volume>
format-volume-background = ${colors.background}
format-muted-background = ${colors.background}

label-volume = %{F#F0C674}VOL%{F-} %percentage%%
label-volume-padding-left = 1
label-volume-padding-right = 1

label-muted = %{F#F0C674}VOL%{F-} MUTED
label-muted-foreground = ${colors.disabled}
label-muted-padding-left = 1
label-muted-padding-right = 1

[module/memory]
type = internal/memory

format-background = ${colors.background}

label = %{F#F0C674}RAM%{F-} %percentage_used:2%%
label-padding-left = 1
label-padding-right = 1

interval = 5

[module/cpu]
type = internal/cpu

format-background = ${colors.background}

label = %{F#F0C674}CPU%{F-} %percentage:2%%
label-padding-left = 1
label-padding-right = 1

interval = 5

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-connected-background = ${colors.background}
; format-disconnected = <label-disconnected>
; label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#F0C674}%ifname%%{F-} %essid%
label-connected-padding-left = 1
label-connected-padding-right = 1

[module/eth]
inherit = network-base
interface-type = wired
label-connected = %{F#F0C674}%ifname%%{F-} %local_ip%
label-connected-padding-left = 1
label-connected-padding-right = 1

[module/date]
type = internal/date
interval = 45

date = %Y-%m-%d %H:%M:%S

label = %date%
label-padding-left = 1
label-padding-right = 1
label-foreground = ${colors.primary}
label-background = ${colors.background}

[module/battery]
type = internal/battery
full-at = 100

label-charging-padding-left = 1
label-charging-padding-right = 1

label-charging = %{F#F0C674}BAT%{F-} %percentage%%
label-charging-background = ${colors.background}

label-discharging-padding-left = 1
label-discharging-padding-right = 1

label-discharging = %{F#F0C674}BAT%{F-} %percentage%%
label-discharging-background = ${colors.background}

low-at = 10
battery = BAT0
adapter = AC
poll-interval = 30

[settings]
screenchange-reload = true
pseudo-transparency = true

