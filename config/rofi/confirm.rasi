/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color: @background;
    text-color: @foreground;
    font: "PT Mono 10";
}

window {
    width: 210px;
    padding: 25px;
    border: 0px 0px 1px 0px;
    border-radius: 0px;
    border-color: @bordercolor;
    location: center;
    y-offset: -2%;
}

entry {
    expand: true;
    text-color:	@foreground;
}
